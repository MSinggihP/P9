#include <iostream>

using namespace std;

int main(){
 int a,b,c;
 int tinggi;
 cout<<"Masukan tinggi segitiga : ";
 cin>>tinggi;

 for(a=tinggi;a>=0;a--){
        for(b=a;b>=0;b--){
            cout<<" ";
        }
        for(c=1;c<=tinggi-a;c++){
            cout<<"*";
        }
        for(c=1;c<tinggi-a;c++){
            cout<<"*";
        }
    cout<<endl;
    }
}

